@using EcommerceStore.WebApp.MVC.Extensions
@model EcommerceStore.WebApp.MVC.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Adicionar no Estoque";
}

<div class="container" style=" padding-top: 20px">

    <h3 style="padding-top: 50px">@ViewData["Title"] </h3>
    <hr />
    <vc:Summary></vc:Summary>

    <div class="row">
        <div class="col-md-5">
            <form asp-controller="Catalogo" asp-action="AlterarEstoque" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" disabled />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label" ></label>
                    <textarea cols="40" rows="5" asp-for="Descricao" class="form-control" disabled></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>               
                <div class="form-group">
                    <label asp-for="QuantidadeEstoque" class="control-label"></label>
                    <input asp-for="QuantidadeEstoque" class="form-control" />
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>                                
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>